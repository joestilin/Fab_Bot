#!/usr/bin/env python

import rospy
from pantilthat import PanTilt

class PantiltROSWrapper:
    def __init__(self):
        self.pantilt = PanTilt();
        
    def stop(self):
        self.pantilt._servo1_stop();
        self.pantilt._servo2_stop();
        
    def pan(self, angle):
        self.pantilt.pan(angle);

if __name__ == "__main__":
    rospy.init_node("PantiltROSWrapper")
    
    pantilt_wrapper = PantiltROSWrapper()
    rospy.on_shutdown(pantilt_wrapper.stop)
    
    pantilt_wrapper.pan(-90)
    
    rospy.spin()